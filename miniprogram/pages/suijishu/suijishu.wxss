page{
    width: 100%;
    height: 100%;
}
input {
    color: white;
}

.wrapper {
    position: relative;
    background: #ffffff;
    width: 100%;
    height:100%;
    border-radius: 5px;
    margin-top: -45%;
}

.text {
    flex: 0 0 100%;
    font-size: 8rem;
    font-weight: 900;
    color: #00000000;
    text-align: center;
    font-family: 'Lato', sans-serif;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    border-bottom: 1px solid #d4d7ff;
    border-top: 1px solid #d4d7ff;
    background-clip: text;
    -webkit-background-clip: text;
}

.pointsize {
    margin-top: 15rpx;
    background-color:rgb(176, 189, 248);
    border-radius: 20rpx;
    font-size: larger;
    width: 100%;
    height:80rpx;
}

.text:after {
    content: attr(data-text);
    -webkit-text-stroke: 1.5px #d4d7ff;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -49%);
    background-clip: text;
    -webkit-background-clip: text;
    background-size: 43%;
}

.form {
    align-items: center;
    text-align: center;
    justify-self: center;
    margin: auto;
    height: 30%;
    width: 90%;
    position: absolute;
    top: 66%;
    left:5%;
}
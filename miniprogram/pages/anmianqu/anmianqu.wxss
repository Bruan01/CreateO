  width: 98rpx;
  height: 98rpx;
}
.icon-pause{
 
  background-repeat: no-repeat;
  background-position: -178px -193px;
  margin: 0 20rpx;
  width: 98rpx;
  height: 98rpx;
}
.icon-next{
  
  background-repeat: no-repeat;
  background-position: -204px -154px;

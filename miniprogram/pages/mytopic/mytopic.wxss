/* <!-- 上半部分信息框 --> */
.head{width:750rpx; padding:20rpx; box-sizing: border-box; margin-bottom: 30rpx;
  border-bottom: 3rpx solid #f5f5f5;}
.head .box{width: 710rpx;border-radius: 20rpx;background: rgb(255, 255, 255);}
/* rgb(135,206,250,0.5) */
/* rgb(255,228,181,0.5) */


.head .box .box-top{width: 710rpx;height: 140rpx; border-radius: 20rpx;display: flex;box-sizing: border-box; align-items: center;}
.head .box .box-top .picture{width: 130rpx; height: 130rpx;margin-right: 30rpx; border-radius: 20rpx;}
.head .box .box-top .picture image{width: 130rpx; height: 130rpx; border-radius: 20rpx; margin-left: 10rpx; margin-top: 5rpx;}
.head .box .box-top .name{width:550rpx;height: 100rpx; font-size: 40rpx;display: flex;align-items: center;border-radius: 20rpx; margin-right: 20rpx;}


.head .box .box-middle{padding-bottom: 15rpx; margin-top: 20rpx; width: 690rpx; margin-left: 20rpx; border-bottom: 1rpx solid rgb(224, 224, 224) ;}


.head .box .box-buttom{width: 100%; border-radius: 20rpx;display: flex;margin-top: 15rpx; padding-bottom: 10rpx; background: rgb(255, 255, 255); align-items: center;}

.head .box .box-buttom .works{width: 10%;text-align: left;display: flex;flex-direction: column;justify-content: space-between;margin-right: 8%;margin-left: 3%;}

.head .box .box-buttom .goods{width: 10%;text-align: left;display: flex;flex-direction: column;justify-content: space-between;margin-right: 8%;}

.head .box .box-buttom .fans{width: 15%;text-align: left;display: flex;flex-direction: column;justify-content: space-between;margin-right: 5%;}

.head .box .box-buttom .btn1{width: 20%; margin-right: 1%;}
.head .box .box-buttom .btn2{width: 20%;}










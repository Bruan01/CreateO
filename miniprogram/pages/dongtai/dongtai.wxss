
/*动态*/
.B{
  width: 750rpx;
  padding: 15rpx 20rpx;
  display: flex;
  border-bottom: 3rpx solid #f5f5f5;
}

/* 头像 */
.B1{
  width: 75rpx;
  height: 75rpx;
  margin-right: 10rpx;
  border-radius: 20%;
}
/* 头像图片 */
.photo{
  width:100%;
  border-radius: 20%;
  overflow: hidden;
  height:auto
}


/* 动态内容 */
.B2{
  width: 625rpx;
  /* background-color: #e0dada; */
  display: flex;
  flex-direction: column;
}
/* 用户名和类别图标 */
.B21{
  display: flex;
  justify-content: space-between;
  margin: 0rpx 5rpx;
  width: 615rpx;
}
/* 动态内容  文本内容*/
.B22{
  width: 100%;
  width:620rpx;
  margin:0rpx 5rpx;
  white-space: pre-line;
  word-break: break-all;
  word-wrap: break-word;
}

/* 第三部分 动态内容图片 */
.B23{
  padding: 10rpx ;
  margin-top: 15rpx;
}
.img2{
  display: flex;
  flex-wrap: wrap;
}

/* 点赞浏览评论 */
.B24{
  /* background: cadetblue; */
  display: flex;
  justify-content: space-between;
  padding:0 10rpx;
  width:625rpx;
  margin-bottom:10rpx;
}
.dzpl{
  display: flex;
}








/* 文章类布局样式 */
.topic{
  width: 710rpx;
  height: 185rpx;
  display: flex;
}

.topicTitLik{
  width: 480rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.topicTitLik .title{
  height: 125rpx;
  margin-left: 15rpx;
}


.topicTitLik .like{
  height: 50rpx;
  align-items: center;
  display: flex;
  justify-content: space-between;
  width:460rpx;
  margin-top:10rpx;
  padding: 0rpx 10rpx;
}






.topicPicNam{
  margin-left: 15rpx;
  width: 215rpx;
  height:185rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}



.topicPicNam .pic{
  height: 125rpx;
  background-color: rgb(255, 255, 255);
}


.topicPicNam .pic image{
  max-width: 215rpx;
  max-height: 125rpx;
}



.topicPicNam .looknb{
  height: 50rpx;
  width: 215rpx;
  margin-top:10rpx;
  font-size:95%;
  color:#B0B0B0;
  font-weight:lighter;
  justify-content: center;
  text-align: center;
  display: flex;
  flex-direction: column;
}



/* 底部 */
.loading{text-align: center;padding:30rpx 0}
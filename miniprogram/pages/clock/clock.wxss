.timer_footer {
  margin: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  padding-top: 40rpx;
  transition: all .3s;
}


.timer .timer_ctrl {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 30rpx;
  color: rgb(77, 77, 77);
  width: 150rpx;
  height: 150rpx;
  margin: 0 50rpx;
  border-radius: 50%;
  transition: all .5s;
  background-color: #f5dcdcfd;
  text-decoration-style: solid;
  font-size: larger;
}


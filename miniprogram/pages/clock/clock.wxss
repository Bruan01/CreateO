.container {
  align-items: center;
  justify-content: center;
  text-align: center;
  margin: auto;
  border-radius: 20rpx;
  display: flex;
  height: 800rpx;
  flex-direction: column;
  overflow: hidden;
  background-color: rgb(255, 255, 255);
}

.timer_main {
  width: 90%;
  border-radius: 50rpx;
  position:relative;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 0rpx;
  text-align: center;
  background-color: #f5dcdcfd;
  /* transition: all .5s; */
  /* z-index: 1; */
}

.timer_time-wrap {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 400rpx;
  height: 400rpx;
  text-align: center;
  transition: all .3s;
}

.timer_progress {
  position: absolute;
  top: 0;
  width: 400rpx;
  height: 400rpx;
  overflow: hidden;
  transition: all .3s;
}


.timer_time {
  font-size: 60rpx;
  color: rgb(17, 16, 16);
  font-weight: lighter;
  transition: font-size .3s;
}

.timer_taskName {
  position: absolute;
  top: -100rpx;
  margin-bottom: auto;
  font-size: 45rpx;
  letter-spacing: 5rpx;
  color: rgb(20, 18, 18);
}

/* .timer_done {
  width: 100rpx;
